<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<body role="document">

<% include templates/navbar.ejs %>

<div class="container theme-showcase" role="main">
    <hr/>
    <div class="row">
        <div class="btn-group btn-group-justified">
            <div class="btn-group">
                <button class="btn btn-default" id="file">Load CSV</button>
            </div>
            <div class="btn-group">
                <button class="btn btn-info" id="fisher">Fisher's Iris</button>
            </div>
            <div class="btn-group">
                <button class="btn btn-success" id="number">Number Data</button>
            </div>
        </div>
    </div>
    <hr/>
    <div class="row">
        <table class="table table-condensed table-bordered" id="data">
            <tbody>
            <% currentData.forEach(function(row){ %>
            <tr>
                <% row.forEach(function(item){ %>
                <td class="text-center"><%= item %></td>
                <% }) %>
            </tr>
            <% }) %>
            </tbody>
        </table>
    </div>
</div>
<form action="/loadCSV" method="post" id="form" enctype="multipart/form-data" style="display: none;">
    <input type="file" name="csv" id="csv"/>
    <input type="submit" value="Submit" id="submit"/>
</form>
</div> <!-- /container -->

<!-- Latest compiled and minified JavaScript -->
<script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
<script src="/javascripts/index.js"></script>
</body>
</html>
